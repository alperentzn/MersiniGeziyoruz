<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.alperen.mapskullan.MainActivity"
    android:background="@drawable/mersin"
    >

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ılceler"
        android:layout_marginTop="79dp"
        android:background="@color/common_action_bar_splitter"
        android:layout_below="@+id/ılce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GEZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="91dp"
        android:id="@+id/btngez"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="İLCE SECİNİZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ılce"
        android:textSize="30sp"
        android:textColorLink="?android:attr/textColorLink"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/mersin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Mersin'e Hosgeldiniz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/mersin"
        android:textSize="35sp"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textColorLink="?android:attr/editTextColor"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

</RelativeLayout>
